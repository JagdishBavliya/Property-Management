<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Visits Export</title>
  <style>
    body {
      font-family: 'Segoe UI', Arial, sans-serif;
      margin: 32px 32px 48px 32px;
      font-size: 11px;
      color: #222;
      background: #f8fafc;
    }

    .header {
      background: linear-gradient(90deg, #f59e0b 0%, #fbbf24 100%);
      color: #fff;
      padding: 18px 24px;
      border-radius: 12px 12px 0 0;
      font-size: 1.5em;
      font-weight: bold;
      letter-spacing: 1px;
      margin-bottom: 0;
      box-shadow: 0 2px 8px #0001;
    }

    .table-container {
      background: #fff;
      border-radius: 0 0 12px 12px;
      box-shadow: 0 2px 8px #0001;
      overflow: hidden;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      table-layout: auto;
      word-break: break-word;
    }

    th,
    td {
      border: 1px solid #e5e7eb;
      padding: 8px 10px;
      text-align: left;
      font-size: 11px;
    }

    th {
      background: #f1f5f9;
      color: #f59e0b;
      font-weight: bold;
    }

    tr:nth-child(even) td {
      background: #f9fafb;
    }

    tr:hover td {
      background: #fef3c7;
    }

    td {
      max-width: 120px;
      overflow-wrap: break-word;
    }

    .status-cell {
      font-weight: bold;
      border-radius: 4px;
      padding: 6px 10px;
      color: #fff;
      background: #64748b;
    }

    .status-Converted {
      background: #22c55e !important;
    }

    .status-Interested {
      background: #3b82f6 !important;
    }

    .status-Pending {
      background: #f59e0b !important;
    }

    .status-Not\ Interested {
      background: #ef4444 !important;
    }

    .status-Follow-Up {
      background: #6366f1 !important;
    }

    .footer {
      font-size: 10px;
      color: #888;
      text-align: right;
      margin-top: 24px;
    }
  </style>
</head>

<body>
  <div class="header">Visits Export</div>
  <div class="table-container">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Agent</th>
          <th>Manager</th>
          <th>Property</th>
          <th>Visit Date</th>
          <th>Client Name</th>
          <th>Client Mobile</th>
          <th>Notes</th>
          <th>Status</th>
          <th>Created</th>
        </tr>
      </thead>
      <tbody>
        <% visits.forEach(row=> { %>
          <tr>
            <td>
              <%= row.id || ' - ' %>
            </td>
            <td>
              <%= row.agent_code || ' - ' %>
            </td>
            <td>
              <%= row.manager_code || ' - ' %>
            </td>
            <td>
              <%= row.property_code || ' - ' %>
            </td>
            <td>
              <%= row.visit_date || ' - ' %>
            </td>
            <td>
              <%= row.client_name || ' - ' %>
            </td>
            <td>
              <%= row.client_mobile || ' - ' %>
            </td>
            <td>
              <%= row.visit_notes || ' - ' %>
            </td>
            <td class="status-cell status-<%= (row.visit_status || '').replace(/ /g, '-') %>">
              <%= row.visit_status || ' - ' %>
            </td>
            <td>
              <%= row.created_at || ' - ' %>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>
  </div>
  <div class="footer">Exported on <%= new Date().toLocaleString('en-IN') %>
  </div>
</body>

</html>